<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:drawable="@drawable/ic_splash_screen_bg" />
    <item
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:bottom="279.5dp"
        android:gravity="center_horizontal|center_vertical"
        android:left="165.5dp"
        android:right="165.5dp"
        android:top="324.5dp">
        <rotate
            android:drawable="@drawable/ic_splash_screen_logo"
            android:fromDegrees="0"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="360" />
    </item>

    <item
        android:id="@+id/text"
        android:bottom="45dp"
        android:drawable="@drawable/ic_splash_screen_text"
        android:gravity="bottom|center_horizontal" />

    <item
        android:id="@+id/progress"
        android:bottom="45dp"
        android:gravity="bottom|center_horizontal">
        <rotate
            android:drawable="@drawable/ic_round_donut"
            android:fromDegrees="0"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="360" />
    </item>
</layer-list>