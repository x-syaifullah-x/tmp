<resources>
    <!-- Base application theme. -->
    <style name="Theme.Application" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">?attr/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- TOOLBAR START-->
    <style name="Toolbar.TextAppearance" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
    </style>

    <color name="Toolbar.Title.Color">#ffff</color>
    <!-- TOOLBAR END-->

    <style name="Theme_Application_NoActionBar" parent="Theme.Application">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ThemeStartedActivity" parent="Theme.Application">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ThemeStartedActivityCostumeWindowBackground" parent="ThemeStartedActivity">
        <item name="android:windowBackground">@drawable/bg_splash_screen</item>
        <!--        <item name="android:windowFullscreen">true</item>-->
    </style>
</resources>